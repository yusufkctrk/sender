<Forgot_Screen>:
    name: "forgot"

    MDToolbar:
        id:profile_bar
        size_hint: 1,0.08
        pos_hint:{"center_y":.96}
        left_action_items: [["arrow-left", lambda x:app.screen_manager.change_screen("login",False)]]
        elevation: 5
    MDLabel:
        text:f"[color=#3c40c6] {app.APP_NAME}[/color] [color=#0fbcf9][font=Icons]{md_icons['message']}[/font][/color]"
        markup:True
        halign: "center"
        pos_hint: {"center_y": .75}
        font_style: "H3"


    MDTextField:
        hint_text: "Kullanıcı adı veya Email"
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        size_hint: .75,0.08
        

    MDRaisedButton:
        text: "Şifremi Unuttum"
        pos_hint: {"center_x": 0.5, "center_y":0.4}
        size_hint: .7,0.05
        on_release: app.screen_manager.change_screen("verification")

    MDTextButton:
        text: f"[color=#000000]Bir hesabın yok mu[/color] Hemen oluştur"
        markup: True
        pos_hint: {"center_x":0.5, "center_y":0.3}
        on_release: app.screen_manager.change_screen("signup")

    MDLabel:
        text: f"[font=Icons] {md_icons['copyright']}[/font][font=Roboto]{app.COMPANY_NAME} 2020[/font]"
        markup: True
        halign: "center"
        pos_hint: {"center_y":0.05}
        
        
        